{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "PROCESS | %(levelname)-6.6s | %(name)-10.10s | %(asctime)s | %(message)s",
            "datefmt": "%d.%m %H:%M:%S"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        }
    },

    "loggers": {
        "debug": {
            "level": "DEBUG",
            "handlers": ["console"]
        },
        "production": {
            "level": "INFO",
            "handlers": ["console"]
        }
    },

    "root": {
        "level": "INFO",
        "handlers": ["console"]
    }
}